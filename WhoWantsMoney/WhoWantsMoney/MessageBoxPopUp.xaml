<Window x:Class="WhoWantsMoney.MessageBoxPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhoWantsMoney"
        mc:Ignorable="d"
        Title="Confirm" Height="150" Width="300" Background="#ECF0F1" MinHeight="150" MaxHeight="150" MinWidth="300" MaxWidth="300" Icon="Images/Icons/icon_f9t_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Are you sure you wish to leave this page? " Grid.Row="0" FontSize="14" Foreground="#16A085" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Century Gothic"></Label>

        <Button Content="Yes" Grid.Row="1" HorizontalAlignment="Left" Height="30" Width="100" Margin="10" Background="#16A085" Foreground="#ECF0F1" FontFamily="Century Gothic" FontWeight="DemiBold" Click="BtnReturn_Click"></Button>
        <Button Content="No" Grid.Row="1" HorizontalAlignment="Right" Height="30" Width="100" Margin="10"  Background="#16A085" Foreground="#ECF0F1" FontFamily="Century Gothic" FontWeight="DemiBold" Click="BtnClose_Click"></Button>
    </Grid>
</Window>
